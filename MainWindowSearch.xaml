        <SolidColorBrush Color="#FFb3ffb3" x:Name="greenBackground"/>
        <SolidColorBrush Color="#FFb5d3f8" x:Name="bluBackground"/>
        <SolidColorBrush Color="#FFf1bebe" x:Name="redBackground"/>
