        </Border>
        </DataTemplate>

		<DataTemplate x:Key="DataTemplateForPrivateRequirementInfoListboxChild">
            <Border Name="Border" CornerRadius="10,10,10,10" BorderThickness="1,1,1,1" BorderBrush="#FFA9A9A9">
