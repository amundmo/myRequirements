<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="myRequirements.AdminControl"
	d:DesignWidth="986" xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" xmlns:myRequirements="clr-namespace:myRequirements" xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data">

	<UserControl.Resources>
            
		<Color x:Key="BorderGreyColor">#FFA1A1A1</Color>
    </UserControl.Resources>

	<Grid x:Name="LayoutRoot">
		<basics:TabControl x:Name="AdminTabControl" SelectionChanged="TabControl_SelectionChanged" Height="Auto" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="Auto" TabStripPlacement="Top">          
            <basics:TabItem Header="Security Requirement Patterns" x:Name="AddSecurityRequirementPattern"/>
            <basics:TabItem Header="Security Design Patterns" x:Name="AddSecurityDesignPattern"/>
            <basics:TabItem Header="Threat patterns" x:Name="AddThreatPattern"/>
            <basics:TabItem Header="User Manager" x:Name="UserManager"/>
		</basics:TabControl>
	</Grid>
</UserControl>